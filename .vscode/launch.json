{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Desktop - HashLink",
      "request": "launch",
      "type": "hl",
      "hxml": "hxml/compile.hxml",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": {
        "type": "haxe",
        "args": "active configuration"
      }
    },
    {
      "type": "nwjs",
      "request": "launch",
      "name": "Web - Launch NWJS",
      "hxml": "hxml/compile.hxml",
      "port": 9222,
      "webRoot": "${workspaceFolder}/build/html5/",
      "preLaunchTask": "Build NWJS"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Web - Launch Firefox",
      "url": "file://${workspaceFolder}/build/html5/index.html",
      "hxml": "hxml/compile.hxml",
      "webRoot": "${workspaceFolder}/build/html5/",
      "preLaunchTask": {
        "type": "haxe",
        "args": "active configuration"
      }
    },
  ]
}